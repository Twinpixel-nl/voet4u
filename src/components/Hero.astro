---
import { Image } from 'astro:assets';
import heroImage from '../assets/foto1.jpeg';
---

<section class="relative py-20 lg:py-28 overflow-hidden">
  <!-- Subtiele blauwe gloed op de achtergrond voor diepte -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl -z-10">
    <div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-blue-100/50 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-blue-50 rounded-full blur-[100px]"></div>
  </div>

  <div class="container mx-auto px-6">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      
      <!-- Tekst gedeelte -->
      <div class="w-full lg:w-1/2 order-2 lg:order-1 text-center lg:text-left">
        <span class="text-[#8fb3c5] uppercase tracking-[0.3em] text-sm mb-6 block font-medium">
          Praktijk voor Voetreflexologie
        </span>
        <h1 class="text-5xl lg:text-7xl text-[#2c3e50] leading-tight mb-8">
          Breng je lichaam weer in <span class="italic font-light text-[#4a7c92]">balans.</span>
        </h1>
        <p class="text-lg text-slate-600/80 font-light leading-relaxed mb-10 max-w-lg mx-auto lg:mx-0">
          Ontdek de kracht van voetreflexmassage en cupping in Randwijk. Een moment van diepe rust en herstel voor jezelf.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center gap-6 justify-center lg:justify-start">
          <a href="#contact" class="btn-primary">
            Afspraak maken
          </a>
          <a href="#over-mij" class="text-[#4a7c92] font-medium border-b border-[#4a7c92]/30 hover:border-[#4a7c92] transition-all pb-1 tracking-wide text-sm uppercase">
            Mijn werkwijze
          </a>
        </div>
      </div>

      <!-- Afbeelding met een 'arch' vorm -->
      <div class="w-full lg:w-1/2 order-1 lg:order-2">
        <div class="relative max-w-md mx-auto lg:max-w-full">
          <!-- De Arch-vorm doorbreekt het corporate gevoel -->
          <div class="rounded-t-full rounded-b-2xl overflow-hidden shadow-2xl ring-8 ring-white/50">
            <Image 
              src={heroImage} 
              alt="Voetreflexmassage" 
              class="w-full h-[550px] object-cover"
            />
          </div>
          
          <!-- Decoratief element -->
          <div class="absolute -bottom-8 -left-8 bg-white/90 backdrop-blur p-6 rounded-2xl shadow-lg hidden md:block border border-blue-50">
             <div class="flex items-center gap-3">
                <div class="w-2 h-2 rounded-full bg-blue-300"></div>
                <p class="text-sm font-medium text-slate-700 italic">Persoonlijke aandacht</p>
             </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>