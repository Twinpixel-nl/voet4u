<section id="tarieven" class="py-24 bg-white">
  <div class="container mx-auto px-6 max-w-3xl">
    <!-- Header: Geen harde underline meer, maar elegant Serif -->
    <div class="text-center mb-16">
      <span class="text-[#8fb3c5] uppercase tracking-[0.3em] text-xs font-bold mb-3 block">Investering in jezelf</span>
      <h2 class="text-5xl font-serif text-[#2c3e50] italic">Tarieven</h2>
      <div class="w-24 h-1 bg-[#4a7c92]/20 mx-auto mt-6 rounded-full"></div>
    </div>

    <!-- De lijst: Luchtig en elegant -->
    <div class="space-y-8">
      {[
        { n: "Vervolg massage (60 min)", p: "€ 60,-" },
        { n: "Vervolg massage (90 min)", p: "€ 85,-" },
        { n: "Oor-acupunctuur (30 min)", p: "€ 30,-" },
        { n: "Cupping (Nek & Schouders)", p: "€ 35,-" },
        { n: "Holistische behandeling (90 min)", p: "€ 85,-" }
      ].map(t => (
        <div class="flex justify-between items-end border-b border-blue-50 pb-4 group">
          <div class="flex flex-col">
            <span class="font-serif text-lg text-slate-700 group-hover:text-[#4a7c92] transition-colors">{t.n}</span>
          </div>
          <div class="flex items-center gap-4">
            <!-- Een subtiel stippellijntje kan ook, maar dit is cleaner -->
            <span class="font-serif text-xl text-[#4a7c92]">{t.p}</span>
          </div>
        </div>
      ))}
    </div>

    <!-- Betalingsinfo: Vriendelijker en minder als een waarschuwing -->
    <div class="mt-16 bg-[#f4f7f9] p-8 rounded-[2rem] text-center">
      <div class="flex justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#8fb3c5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="5" width="20" height="14" rx="2"></rect><line x1="2" y1="10" x2="22" y2="10"></line></svg>
      </div>
      <p class="text-sm text-slate-500 font-light italic max-w-md mx-auto leading-relaxed">
        Betaling is uitsluitend <span class="text-[#4a7c92] font-semibold">contant</span> mogelijk (geen pin). 
        <br/> 
        Mocht je een afspraak willen verzetten, doe dit dan minimaal 24 uur van tevoren.
      </p>
    </div>
  </div>
</section>