---
import { Image } from 'astro:assets';
import foto3 from '../assets/foto3.jpeg'; 
---
<section id="contact" class="py-24 bg-[#f4f7f9]">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto bg-white rounded-[3rem] shadow-xl overflow-hidden flex flex-col lg:flex-row">
      
      <!-- Linkerkant: Foto 3 -->
      <div class="lg:w-1/2 relative min-h-[400px]">
        <Image 
          src={foto3} 
          alt="Praktijk Voet 4 U" 
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>

      <!-- Rechterkant: Formulier -->
      <div class="lg:w-1/2 p-8 md:p-12 lg:p-16">
        <h2 class="text-4xl font-serif text-[#2c3e50] mb-8 italic">Neem contact op</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12 border-b border-blue-50 pb-10">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-[#f4f7f9] flex items-center justify-center text-[#4a7c92]">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            </div>
            <a href="tel:0619777921" class="text-sm font-semibold text-slate-700">06 - 19 777 921</a>
          </div>

          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-[#f4f7f9] flex items-center justify-center text-[#4a7c92]">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2-2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            </div>
            <a href="mailto:anjajonker67@gmail.com" class="text-sm font-semibold text-slate-700">anjajonker67@gmail.com</a>
          </div>
        </div>

        <!-- Netlify Formulier -->
          <form name="contact" method="POST" data-netlify="true" action="/bedankt" class="space-y-5">
          <!-- Dit verborgen veld is belangrijk voor Astro + Netlify -->
          <input type="hidden" name="form-name" value="contact" />
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input type="text" name="name" placeholder="Naam" required class="w-full px-0 py-3 border-b border-blue-100 focus:border-[#4a7c92] outline-none transition-all bg-transparent font-light" />
            <input type="email" name="email" placeholder="E-mail" required class="w-full px-0 py-3 border-b border-blue-100 focus:border-[#4a7c92] outline-none transition-all bg-transparent font-light" />
          </div>
          <textarea name="message" placeholder="Uw bericht" required rows="3" class="w-full px-0 py-3 border-b border-blue-100 focus:border-[#4a7c92] outline-none transition-all bg-transparent font-light"></textarea>
          
          <button type="submit" class="w-full bg-[#4a7c92] text-white font-bold py-4 rounded-full hover:bg-[#3d6679] transition-all shadow-lg shadow-blue-900/10 uppercase tracking-widest text-xs mt-4">
            Bericht verzenden
          </button>
        </form>
      </div>
    </div>
  </div>
</section>