---
import { Image } from 'astro:assets';
import foto3 from '../assets/foto3.jpeg'; 
---

<section id="contact" class="py-24 bg-slate-50">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto bg-white rounded-[2.5rem] shadow-xl overflow-hidden flex flex-col lg:flex-row">
      
      <!-- Linkerkant: Foto 3 -->
      <div class="lg:w-1/2 relative min-h-[400px]">
        <Image 
          src={foto3} 
          alt="Praktijk Voet 4 U" 
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>

      <!-- Rechterkant: Info & Formulier -->
      <div class="lg:w-1/2 p-8 md:p-12 lg:p-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-6 italic">Neem contact op</h2>
        
        <!-- Contactgegevens met strakke iconen -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12 border-b border-slate-100 pb-10">
          <div class="flex items-center gap-4 group">
            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            </div>
            <a href="tel:0619777921" class="text-sm font-semibold text-slate-700 hover:text-blue-600 transition">06 - 19 777 921</a>
          </div>

          <div class="flex items-center gap-4 group">
            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2-2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            </div>
            <a href="mailto:info@voet4u.nl" class="text-sm font-semibold text-slate-700 hover:text-blue-600 transition">info@voet4u.nl</a>
          </div>

          <div class="flex items-start gap-4 group md:col-span-2">
            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            </div>
            <p class="text-sm font-semibold text-slate-700 leading-tight pt-2">Kon. Julianastraat 1A, 6668AG Randwijk</p>
          </div>
        </div>

        <!-- Formulier -->
        <form action="https://formspree.io/f/JOUW_ID" method="POST" class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input type="text" name="name" placeholder="Naam" required class="w-full px-5 py-4 rounded-2xl border border-slate-100 bg-slate-50 focus:bg-white focus:border-blue-600 outline-none transition-all" />
            <input type="email" name="email" placeholder="E-mail" required class="w-full px-5 py-4 rounded-2xl border border-slate-100 bg-slate-50 focus:bg-white focus:border-blue-600 outline-none transition-all" />
          </div>
          <textarea name="message" placeholder="Uw bericht" required rows="4" class="w-full px-5 py-4 rounded-2xl border border-slate-100 bg-slate-50 focus:bg-white focus:border-blue-600 outline-none transition-all"></textarea>
          <button type="submit" class="w-full bg-blue-600 text-white font-bold py-4 rounded-2xl hover:bg-blue-700 transition-all shadow-lg shadow-blue-100 uppercase tracking-widest text-xs">
            Bericht verzenden
          </button>
        </form>
      </div>
    </div>
  </div>
</section>